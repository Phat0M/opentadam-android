<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_car_cont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/v2_bg_heder_90"
    android:orientation="vertical"
    android:visibility="gone">

    <com.opentadam.view.SeparatorProject xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        tools:showIn="@layout/car_data_cont" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="24dp">

            <com.opentadam.view.AutoSizeText
                android:id="@+id/search_color"
                style="@style/BoldText"
                app:max_lendch_DP="190"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="18dp" />

            <com.opentadam.view.AutoSizeText
                app:max_lendch_DP="190"
                android:id="@+id/search_brand"
                style="@style/BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:textColor="@color/text_white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:minWidth="112dp"
            android:layout_height="28dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_reg_num"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_reg_num_info"
                style="@style/BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/search_reg_num_info_region"
                style="@style/BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>