<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/body_cont"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@string/weight_key_board" />

    <LinearLayout
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_selector_key" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_1"
                style="@style/keyTextView"
                android:tag="1"
                android:text="1" />

            <TextView
                android:id="@+id/key_2"
                style="@style/keyTextView"
                android:tag="2"
                android:text="2" />

            <TextView
                android:id="@+id/key_3"
                style="@style/keyTextView"
                android:tag="3"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_4"
                style="@style/keyTextView"
                android:tag="4"
                android:text="4" />

            <TextView
                android:id="@+id/key_5"
                style="@style/keyTextView"
                android:tag="5"
                android:text="5" />

            <TextView
                android:id="@+id/key_6"
                style="@style/keyTextView"
                android:tag="6"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_7"
                style="@style/keyTextView"
                android:tag="7"
                android:text="7" />

            <TextView
                android:id="@+id/key_8"
                style="@style/keyTextView"
                android:tag="8"
                android:text="8" />

            <TextView
                android:id="@+id/key_9"
                style="@style/keyTextView"
                android:tag="9"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_point"
                style="@style/keyTextView"
                android:tag="."
                android:text="." />

            <TextView
                android:id="@+id/key_0"
                style="@style/keyTextView"
                android:tag="0"
                android:text="0" />

            <FrameLayout
                android:id="@+id/key_bask"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_key"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_backspace_key" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>