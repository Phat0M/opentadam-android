<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="48dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_unchecked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="47dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/pl_image_cont"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/pf_bg_item_plus">

            <ImageView
                android:id="@+id/pl_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/fp_hist_perid"
                style="@style/RegularTextRoboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-1dp"
                android:textColor="@color/fref_text_sec"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/pl_text"
                style="@style/RegularTextRoboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:lineSpacingMultiplier="0.8"
                android:textColor="#525A65"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pf_valye_summ"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/pf_valye_summ_add"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/pf_rub"
                style="@style/RegularTextRoboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/pf_kop"
                style="@style/RegularTextRoboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/pf_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:srcCompat="@drawable/ic_referal_bonus_icon" />
            <!--            <TextView
                            style="@style/RegularTextRoboto"
                            android:id="@+id/pf_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textSize="13dp" />-->
        </LinearLayout>
    </LinearLayout>


</LinearLayout>