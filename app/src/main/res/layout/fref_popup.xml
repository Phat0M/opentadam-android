<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fref_popup"
    android:layout_width="180dp"
    android:layout_height="104dp"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingStart="12dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="14dp"
    android:visibility="gone"
    tools:ignore="RtlSymmetry"
    android:paddingEnd="10dp">

    <TextView
        android:textAllCaps="true"
        style="@style/LightText"
        android:id="@+id/fref_popup_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fref_color_help"
        android:textSize="13dp" />

    <LinearLayout
        android:gravity="top"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fref_typ"
            android:layout_marginTop="4dp"
            style="@style/BoldTextRoboto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="10dp" />

        <LinearLayout
            android:gravity="top|right"
            android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fref_typ_popup_rub"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fref_color_add_bunus"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/fref_typ_popup_kop"
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fref_color_add_bunus"
                android:textSize="18dp" />

            <ImageView
                android:layout_marginTop="6dp"
                app:srcCompat="@drawable/ic_referal_bonus_icon"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <!--
                        <TextView
                            android:id="@+id/fref_typ_popup_cur"
                            style="@style/ThinText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/fref_color_add_bunus"
                            android:textSize="18dp" />-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="top"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="4dp"
            style="@style/BoldTextRoboto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fref_balanc"
            android:textColor="@color/text_white"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/fref_popup_rub"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/fref_popup_kop"
            style="@style/ThinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="18dp" />

        <ImageView
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/ic_referal_bonus_icon"
            android:layout_width="12dp"
            android:layout_height="12dp" />

        <!--        <TextView
                    android:id="@+id/fref_popup_cur"
                    style="@style/ThinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:textSize="18dp" />-->
    </LinearLayout>

</LinearLayout>