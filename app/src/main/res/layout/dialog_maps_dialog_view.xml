<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/CondensedBoldText"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:text="@string/title_dialog_maps"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cont_set_google"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/check_google"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_success" />

        <TextView
            android:layout_marginLeft="14dp"
            android:id="@+id/ad_camera"
            style="@style/LightText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Google Maps"
            android:textSize="21dp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cont_set_osm"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            app:srcCompat="@drawable/ic_success"
            android:id="@+id/check_osm"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:layout_marginLeft="14dp"
            android:id="@+id/ad_gal"
            style="@style/LightText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="osm"
            android:textSize="21dp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cont_set_yandex"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            app:srcCompat="@drawable/ic_success"
            android:id="@+id/check_yandex"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:layout_marginLeft="14dp"
            android:id="@+id/ad_ya"
            style="@style/LightText"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="yandex"
            android:textSize="21dp" />

    </LinearLayout>

</LinearLayout>