<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/froute_bcb_layout"
    android:visibility="gone"
    android:layout_marginTop="-2dp"
    android:layout_width="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/v3_froute_body">


    <TextView
        android:id="@+id/route_cost_value_prefix"
        style="@style/CondensedBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefix_summ"
        android:textColor="@color/text_white"
        android:textSize="16dp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/route_cost_value"
            style="@style/CondensedBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/text_white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/route_cost_value_dec"
            style="@style/CondensedBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:textAllCaps="true"
            android:textColor="@color/text_white"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/currency_short"
            style="@style/CondensedBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textAllCaps="true"
            android:textColor="@color/text_white"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>