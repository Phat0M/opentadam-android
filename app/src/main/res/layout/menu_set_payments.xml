<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/fsco_close_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            sothree:srcCompat="@drawable/ic_close_white_black" />

        <TextView
            android:id="@+id/f_s_c_title"
            style="@style/LightText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/title_cash_value"
            android:textSize="28dp" />

        <LinearLayout
            android:id="@+id/cont_cash_payments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_while"
            android:orientation="vertical" />

    </LinearLayout>

    <com.opentadam.ui_payemnts_metods.ProgressView
        android:id="@+id/msp_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>

