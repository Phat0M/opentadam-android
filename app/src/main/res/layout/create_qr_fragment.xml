<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_while"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/qr_bask"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
    <TextView
        android:layout_marginLeft="72dp"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:text="@string/title_create_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="24dp"
        android:textSize="16dp"
        android:layout_marginTop="48dp"
        android:text="Это QR код с вашей реферальной ссылкой. Дайте его отсканировать вашим друзьям, и они станут участниками вашей реферальной программы."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/img_result_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.opentadam.ui_payemnts_metods.ProgressView
        android:id="@+id/msp_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>