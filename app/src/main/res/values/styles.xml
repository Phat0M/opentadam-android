<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Rating" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_default_color</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorBrend">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDef" parent="AppTheme">
        <item name="android:textColor">@color/text_default_color</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorBrend">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_while</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="defaultEditText" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_sec_time</item>
    </style>
    <style name="sendWhileEditText" parent="AppTheme">
        <item name="android:inputType">textCapCharacters</item>
        <item name="colorControlNormal">@color/text_white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="colorControlActivated">@color/text_white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/text_white</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearnace</item>
    </style>

    <style name="MyCustomTextAppearnace" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="LightText">

        <item name="fontPath">fonts/Roboto/Roboto-Light.ttf</item>
    </style>

    <style name="BoldTextRoboto">
        <item name="fontPath">fonts/Roboto/Roboto-Bold.ttf</item>
    </style>

    <style name="BookText">
        <item name="fontPath">fonts/Roboto/Roboto-Medium.ttf</item>
    </style>

    <style name="BoldText">

        <item name="fontPath">fonts/Roboto/Roboto-Bold.ttf</item>
    </style>

    <style name="CondensedRegularText">
        <item name="fontPath">fonts/Roboto/RobotoCondensedRegular.ttf</item>
    </style>

    <style name="CondensedBoldText">
        <item name="fontPath">fonts/Roboto/Roboto-Bold-Condensed.ttf</item>
    </style>


    <style name="RegularTextRoboto">
        <item name="fontPath">fonts/Roboto/Roboto-Regular.ttf</item>
    </style>

    <style name="MediumText">
        <item name="fontPath">fonts/Roboto/Roboto-Medium.ttf</item>
    </style>

    <style name="ThinText">
        <item name="fontPath">fonts/Roboto/Roboto-Thin.ttf</item>
    </style>

    <style name="XBoldText">
        <item name="fontPath">fonts/Roboto/Roboto-Bold.ttf</item>
    </style>


    <style name="LightText.profileTextEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textWebEmailAddress</item>
        <item name="android:textColor">@color/text_default_color</item>
        <item name="android:textColorHint">@color/text_sec_time</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
        <item name="android:ems">10</item>
    </style>

    <style name="CondensedBoldText.ProfileInfoText">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="LightText.profileTextEdit.adressFeed">
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LightText.profileTextEdit.froute">
        <item name="fontPath">fonts/Roboto/Roboto-Light.ttf</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="keyTextView">

        <item name="fontPath">fonts/Roboto/Roboto-Regular.ttf</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_key</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="OrderDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/text_default_color</item>
        <item name="windowActionBar">false</item>

    </style>

</resources>
